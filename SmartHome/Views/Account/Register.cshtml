@using SmartHome.Models
@model  RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
<body class="register-page sidebar-collapse">
    <div class="page-header" style="background-image: url('../../assets/img/login-image.jpg');">
            <div class="filter"></div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 ml-auto mr-auto">
                        <div class="card card-register">
                            <h3 class="title mx-auto">Welcome</h3>
                            <div class="social-line text-center">
                                <a href="#pablo" class="btn btn-neutral btn-facebook btn-just-icon">
                                    <i class="fa fa-facebook-square"></i>
                                </a>
                                <a href="#pablo" class="btn btn-neutral btn-google btn-just-icon">
                                    <i class="fa fa-google-plus"></i>
                                </a>
                                <a href="#pablo" class="btn btn-neutral btn-twitter btn-just-icon">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </div>

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "register-form", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                    </div>
                                    @Html.LabelFor(m => m.Password, new { @class = "" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                    </div>

                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Password" })
                                    </div>
                                </div>

                                <button class="btn btn-danger btn-block btn-round">Register</button>

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer register-footer text-center">
            <h6>
                ©
                <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by Creative Tim
            </h6>
        </div>

</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
